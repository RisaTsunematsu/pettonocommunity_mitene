<h2>コメント一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th scope="col">ハンドルネーム</th>
      <th scope="col">コメント</th>
      <th scope="col"></th></th>
    </tr>
  </thead>
  <% @comments.each do |comment| %>
  <tbody>
    <tr>
      <td><%#= comment.handlename %></td>
      <td><%= comment.post_comments %></td>
      <td><%#= link_to '削除', admin_post_path(post.id), method: :delete, class: "btn btn-danger",data: {confirm: "本当に削除しますか？"}  %></td>
    </tr>
  </tbody>
  <% end %>
</table>