<div class="container ml-5 add-font">

   <h2 class="mt-5">新規会員登録</h2>
<%= current_user %>

 <%= form_with model: @user, url:  user_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row mt-3">
      <p class="col-md-2">名前</p>
      <div class="col-md-1 text-right">
        <%= f.label :first_name, "(姓)" %>
      </div>
      
      <div class="col-md-3">
        <%= f.text_field :first_name, autofocus: true, required: true, autocomplete: "first_name" %>
      </div>
      <div class="col-md-1 text-right">
        <%= f.label :last_name, "(名)" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :last_name, required: true, autocomplete: "personal_name" %>
      </div>
    </div>

    <div class="row mt-3">
      <p class="col-md-2">フリガナ</p>
      <div class="col-md-1 text-right">
        <%= f.label :first_name_kana, "(セイ)" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name_kana, required: true, autocomplete: "family_name_ruby" %>
    </div>
    
    <div class="col-md-1 text-right">
        <%= f.label :last_name_kana, "(メイ)" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :last_name_kana, required: true, autocomplete: "personal_name_ruby" %>
      </div>
    </div>
    
    <div class="row mt-3">
      <p class="col-md-3">ハンドルネーム</p>
      <div class="field col-md-9">
        <%= f.text_field :handlename,  required: true, autocomplete: "email" %>
      </div>
    </div>
    
    <div class="row mt-3">
      <p class="col-md-3">メールアドレス</p>
      <div class="field col-md-9">
        <%= f.email_field :email,  required: true, autocomplete: "email" %>
      </div>
    </div>

    
    <div class="row mt-3">
      <p class="col-md-3">パスワード(6文字以上)</p>
      <div class="field col-md-9">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row mt-3">
      <p class="col-md-3">パスワード(確認用)</p>
      <div class="field col-md-9">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="actions row mt-3">
      <div class="col-md-3"></div>
      <div class="field col-md-9 pb-lg-5">
        <%= f.submit "新規登録", class: "text-dark btn-outline-success btn-lg" %>
      </div>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
     